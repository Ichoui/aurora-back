{
  "name": "aurora-proxy-nest",
  "version": "0.0.1",
  "author": "Morgan N aka Ichoui",
  "description": "API for Aurorapp - Northern Light app, available on the Play Store only, for Aurora Borealis",
  "private": true,
  "licence": "GPL-3.0-only",
  "scripts": {
    "start": "npm run build:watch | firebase emulators:start --only functions",
    "build:watch": "tsc --watch --preserveWatchOutput",
    "build": "tsc",
    "build:dev": "npm run conf:dev && npm run build",
    "build:prod": "npm run conf:prod && npm run build",
    "conf:dev": "npm run firebase:use:dev && npm run copy:env:dev && npm run google:creds:dev",
    "conf:prod": "npm run firebase:use:prod && npm run copy:env:prod && npm run google:creds:prod",
    "copy:env:dev": "copy environments\\.env.dev .env",
    "copy:env:prod": "copy environments\\.env.prod .env",
    "firebase:use:dev": "firebase use dev",
    "firebase:use:prod": "firebase use prod",
    "google:creds:dev": "set GOOGLE_APPLICATION_CREDENTIALS=C:\\development\\aurora-back\\environments\\aurora-sdk.dev.json",
    "google:creds:prod": "set GOOGLE_APPLICATION_CREDENTIALS=C:\\development\\aurora-back\\environments\\aurora-sdk.prod.json",
    "deploy:dev": "npm-run-all build:dev firebase:deploy",
    "deploy:prod": "npm-run-all build:prod firebase:deploy",
    "firebase:emulator": "firebase emulators:start",
    "firebase:logs": "firebase functions:log",
    "firebase:deploy": "firebase deploy --only functions --force",
    "lint": "eslint \"{src}/**/*.ts\" --fix",
    "prettier": "prettier --write \"**/*.{js,ts,css,scss,html}\"",
    "prettier:check": "prettier --check \"**/*.{js,ts,css,scss,html}\""
  },
  "dependencies": {
    "@nestjs/axios": "^3.0.1",
    "@nestjs/cache-manager": "^2.1.0",
    "@nestjs/common": "^10.1.3",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.1.3",
    "@nestjs/platform-express": "^10.1.3",
    "@nestjs/typeorm": "^10.0.1",
    "@types/chart.js": "^2.9.37",
    "axios": "^1.6.5",
    "cache-manager": "^5.2.3",
    "class-validator": "^0.14.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "firebase-admin": "^11.10.1",
    "firebase-functions": "^4.6.0",
    "nest-winston": "^1.9.3",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.19",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.1.11",
    "@nestjs/schematics": "^10.0.2",
    "@nestjs/testing": "^10.1.3",
    "@types/cache-manager": "^4.0.2",
    "@types/express": "^4.17.17",
    "@types/jest": "29.5.3",
    "@types/node": "20.4.9",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "firebase-functions-test": "^3.1.0",
    "jest": "29.6.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "29.1.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.1.6"
  },
  "main": "dist/src/main.js",
  "engines": {
    "node": "20"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
